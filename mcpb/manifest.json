{
  "manifest_version": "0.3",
  "name": "mcp-data-platform",
  "display_name": "MCP Data Platform Server",
  "icon": "icon.png",
  "version": "0.0.0",
  "description": "Semantic data platform MCP server with bidirectional cross-injection",
  "long_description": "A semantic data platform MCP server that composes multiple data tools (Trino, DataHub, S3) with bidirectional cross-injection - tool responses automatically include critical context from other services.",
  "author": {
    "name": "Craig Johnston",
    "email": "cj@imti.co",
    "url": "https://imti.co"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/txn2/mcp-data-platform"
  },
  "homepage": "https://github.com/txn2/mcp-data-platform",
  "documentation": "https://github.com/txn2/mcp-data-platform#readme",
  "license": "Apache-2.0",
  "keywords": [
    "mcp",
    "data-platform",
    "semantic",
    "trino",
    "datahub"
  ],
  "server": {
    "type": "binary",
    "entry_point": "mcp-data-platform",
    "mcp_config": {
      "command": "${__dirname}/mcp-data-platform",
      "args": [],
      "env": {},
      "platform_overrides": {
        "win32": {
          "command": "${__dirname}/mcp-data-platform.exe"
        }
      }
    }
  },
  "compatibility": {
    "claude_desktop": ">=1.0.0",
    "platforms": ["darwin", "win32", "linux"]
  },
  "tools": [
    {
      "name": "example_tool",
      "description": "An example tool that echoes a message"
    }
  ],
  "user_config": {}
}
